csharp_library(
  name = 'yogalibnet46',
  dll_name = 'Facebook.Yoga.dll',
  framework_ver = 'net46',
  srcs = glob(['**/*.cs']),
)

csharp_library(
  name = 'yogalibnet45',
  dll_name = 'Facebook.Yoga.dll',
  framework_ver = 'net45',
  srcs = glob(['**/*.cs']),
)

